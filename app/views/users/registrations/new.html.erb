<body class="user">
<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <p><%= f.label :ユーザーネーム %></p>
    <%= f.text_field :name, :class=>"pen", autofocus: true %>
  </div>

  <div class="field">
    <p><%= f.label :メールアドレス %></p>
    <%= f.email_field :email, autofocus: true, :class=>"pen", autocomplete: "email" %>
  </div>

  <div class="field">
    <p><%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %></p>
    <%= f.password_field :password, :class=>"pen", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <p><%= f.label :パスワード %><i>(再入力)</i></p>
    <%= f.password_field :password_confirmation, :class=>"pen", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", :class=>"btn" %>
  </div>
<% end %>

<p class="link"><%= render "users/shared/links" %></p>
</body>
