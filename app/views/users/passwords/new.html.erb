<body class="user">
<h2>パスワードをお忘れですか？</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class=>"pen", autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "再設定用リンクをメールに送信", :class=>"btn" %>
  </div>
<% end %>

<p class="link"><%= render "users/shared/links" %></p>
</body>
