<body class="user">
<h2>パスワードを変更</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "新しいパスワード" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, :class=>"pen", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワードを再入力" %><br />
    <%= f.password_field :password_confirmation, :class=>"pen", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</body>
